---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"time"> {
  date: Date;
}

const { date, ...rest } = Astro.props;
---

<time datetime={date.toISOString()} {...rest}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
